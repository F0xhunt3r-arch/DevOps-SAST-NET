@{
    ViewData["Title"] = "Login";
}

<nav style="background-color: #333; padding: 10px; color: white; text-align: center;">
    <h2 style="margin: 0;">Aplicaci√≥n .NET - Login</h2>
</nav>

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <form asp-action="Login" method="post" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 300px;">
        <div style="margin-bottom: 15px;">
            <label for="username" style="display: block; margin-bottom: 5px;">Username</label>
            <input type="text" id="username" name="username" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        </div>
        <div style="margin-bottom: 15px;">
            <label for="password" style="display: block; margin-bottom: 5px;">Password</label>
            <input type="password" id="password" name="password" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        </div>
        <div style="text-align: center;">
            <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Login</button>
        </div>
    </form>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red; text-align: center;">@ViewBag.ErrorMessage</div>
}